#include <bits/stdc++.h>

using namespace std;

int main(){
    cout<<"Enter the message"<<"\n";
    int j=0,k=0;
    string s,s1,s2;
    std::getline(cin,s2);
    for(int i=0;i<s2.length();i++){
        if(s2[i]!=' '){
            s.push_back(s2[i]);
            k++;
        }
    }
    for(int i=0;i<s.length();i+=2){
        s1.push_back(s[i]);
        j++;
    }
    for(int i=1;i<s.length();i+=2){
        s1.push_back(s[i]);
        j++;
    }
    cout<<s1;

    return 0;
}
